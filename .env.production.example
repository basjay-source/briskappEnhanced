# Database Configuration (auto-generated by DigitalOcean)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration (auto-generated by DigitalOcean)
REDIS_URL=redis://host:port

# Application Secrets (user must provide)
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
OPENAI_API_KEY=your-openai-api-key-from-openai-dashboard

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ORIGINS=https://your-app-domain.ondigitalocean.app,https://your-custom-domain.com

# Optional: Additional API Keys
STRIPE_API_KEY=your-stripe-api-key-if-using-payments
SENDGRID_API_KEY=your-sendgrid-api-key-for-emails

# Security Settings
ALLOWED_HOSTS=your-app-domain.ondigitalocean.app,your-custom-domain.com
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Performance Settings
WORKERS=2
MAX_CONNECTIONS=100
TIMEOUT=30
